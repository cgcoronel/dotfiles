"""""""""""""""""""" File path tab line
"""""""""""""""""""""""""""""""""""""""
set showtabline=2
function! FilePathLine() 
   return (&modified ? '%#DiffDelete#' : '%#DiffAdd#') 
          \. ' '
          \. WebDevIconsGetFileTypeSymbol()
          \. '  '
	  \. expand('%f') 
          \. ' '
	  \. '%#Pmenu#'  
endfunction
set tabline=%!FilePathLine()

